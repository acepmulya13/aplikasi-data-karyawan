<%- include('./partials/header', {title : 'Edit Data Lama'}) -%>

<div class="col-lg-5">
<div class="card mb-4 ">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Edit Data Pribadi</h6>
    </div>
    <div class="card-body">
      <form action="/<%= data.id %>/edit/" method="post">
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="">NIK</label>
                <input type="number" class="form-control" id="" name="nik" value="<%= data.NIK %>" disabled>
            </div>
            <div class="form-group col-md-12">
                <label for="">Nama</label>
                <input type="text" class="form-control" id="" name="nama" value="<%= data.Nama_Lengkap %>">
            </div>
            <div class="form-group col-md-12">
                <label for="">Jenis Kelamin</label>
                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="jenis_kelamin" id="" value="Laki-laki" <%= data.Jenis_Kelamin === 'Laki-laki'? 'checked' : '' %>>
                        <label class="form-check-label" for="">Laki-laki</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="jenis_kelamin" id="" value="Perempuan" <%= data.Jenis_Kelamin === 'Perempuan'? 'checked' : '' %>>
                        <label class="form-check-label" for="">Perempuan</label>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-12">
                <label for="">Tanggal Lahir</label>
                <input type="date" class="form-control" id="" name="tanggal_lahir" value="<%= tgl(data.Tanggal_Lahir) %>">
            </div>
            <div class="form-group col-md-12">
                <label for="">Alamat</label>
                <textarea class="form-control" id="" rows="3" name="alamat"><%= data.Alamat %></textarea>
            </div>
            <div class="form-group col-md-12">
                <label for="">Negara</label>
                <select id="" class="form-control" name="negara">
                    <option>Choose...</option>
                    <option value="Amerika" <%= data.Negara  ==  "Amerika"  ? 'selected' : '' %>>Amerika</option>
                    <option value="China" <%= data.Negara  ==  "China"  ? 'selected' : '' %>>China</option>
                    <option value="Jepang" <%= data.Negara  ==  "Jepang"  ? 'selected' : '' %>>Jepang</option>
                    <option value="Indonesia" <%= data.Negara  ==  "Indonesia"  ? 'selected' : '' %>>Indonesia</option>
                </select>
            </div><br>
            <button type="submit" class="btn btn-primary">Ubah</button><button type="submit" class="btn btn-primary ms-1">Kembali</button>
        </div>
    </form>
    </div>
  </div>
</div>

<%- include('./partials/footer') -%>