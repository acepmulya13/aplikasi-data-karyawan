<%- include('./partials/header', {title : 'Data Karyawan'}) -%>

<div class="card mb-4 ">
    <div class="card-body bg-warning text-dark">
      <form action="/search" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="">NIK</label>
                <input type="number" class="form-control" id="" name="nik">
            </div>
            <div class="form-group col-md-6">
                <label for="">Nama</label>
                <input type="text" class="form-control" id="" name="nama">
            </div>
        </div><br>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    </div>
  </div>
  
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800"></h1>
    <a href="/add" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-plus fa-sm text-white-50"></i> Add</a>
  </div>

      <div class="table-responsive">
          <table class="table table-bordered" id="example" width="100%" cellspacing="0">
            <thead class="bg-info text-white">
              <tr>
                <th>No</th>
                <th>NIK</th>
                <th>Nama Lengkap</th>
                <th>Umur</th>
                <th>Tanggal Lahir</th>
                <th>Jenis Kelamin</th>
                <th>Alamat</th>
                <th>Negara</th>
                <th>Action</th>
              </tr>
            </thead>
            
            <tbody>
                <% data.forEach(e =>{ %>
                    <tr>
                        <td><%= e.id %></td>
                        <td><%= e.NIK %></td>
                        <td><%= e.Nama_Lengkap %></td>
                        <td><%= umur(e.Tanggal_Lahir) %></td>
                        <td><%= tmp(e.Tanggal_Lahir) %></td>
                        <td><%= e.Jenis_Kelamin %></td>
                        <td><%= e.Alamat %></td>
                        <td><%= e.Negara %></td>
                        <td><a href="#">Detail</a> || <a href="/<%= e.id %>/edit">Edit</a> || <a href="/<%= e.id %>/delete" onclick="return confirm('Anda yakin menghapus data ini?');">Delete</a></td>
                    </tr>
                <% }) %> 
             
            </tbody>
          </table>
  </div>
</div>

<%- include('./partials/footer') -%>