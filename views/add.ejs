<%- include('./partials/header', {title : 'Tambah Data Baru'}) -%>

<div class="col-lg-5">
<div class="card mb-4 ">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Tambah Data Baru</h6>
    </div>
    <div class="card-body">
      <form action="/add" method="post">
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="">NIK</label>
                <input type="number" class="form-control" id="" name="nik" placeholder="max. 10 digit" required>
            </div>
            <div class="form-group col-md-12">
                <label for="">Nama</label>
                <input type="text" class="form-control" id="" name="nama" required>
            </div>
            <div class="form-group col-md-12">
                <label for="pt">Jenis Kelamin</label>
                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="jenis_kelamin" id="" value="Laki-laki">
                        <label class="form-check-label" for="">Laki-laki</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="jenis_kelamin" id="" value="Perempuan">
                        <label class="form-check-label" for="">Perempuan</label>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-12">
                <label for="pt">Tanggal Lahir</label>
                <input type="date" class="form-control" id="" name="tanggal_lahir" required>
            </div>
            <div class="form-group col-md-12">
                <label for="">Alamat</label>
                <textarea class="form-control" id="" rows="3" name="alamat" required></textarea>
            </div>
            <div class="form-group col-md-12">
                <label for="">Negara</label>
                <select id="" class="form-control" name="negara" required>
                    <option value="">Choose...</option>
                    <option value="Amerika">Amerika</option>
                    <option value="China">China</option>
                    <option value="Jepang">Jepang</option>
                    <option value="Indonesia">Indonesia</option>
                </select>
            </div><br>
            <button type="submit" class="btn btn-primary">Simpan</button><button type="button" onclick="window.location.href='/'" class="btn btn-secondary ms-1">Kembali</button>
        </div>
    </form>
    </div>
  </div>
</div>

<%- include('./partials/footer') -%>